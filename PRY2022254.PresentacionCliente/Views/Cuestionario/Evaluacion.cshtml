    <script>

        let timeout;
        let timeAway = 0;
        const timeToWait = 10 * 60 * 1000; // 10 segundos en milisegundos
        const redirectToUrl = "https://localhost:44392"; // Asegúrate de actualizar esto a la ruta correcta

        function resetTimeout() {
            clearTimeout(timeout);
            timeout = setTimeout(() => {
                showInactiveAlert();
            }, timeToWait);
        }

        function showInactiveAlert() {
            const userResponse = confirm(
                "Has estado inactivo por 10 segundos. ¿Deseas continuar? (Presiona OK para continuar o Cancelar para ir a la página de inicio)"
            );

            if (!userResponse) {
                window.location.href = redirectToUrl;
            } else {
                resetTimeout();
            }
        }

        function setupTimeout() {
            resetTimeout();

            // Evento para detectar cuando el usuario sale de la pestaña
            window.addEventListener("blur", () => {
                clearTimeout(timeout);
                timeAway = new Date().getTime();
            });

            // Evento para detectar cuando el usuario regresa a la pestaña
            window.addEventListener("focus", () => {
                const currentTime = new Date().getTime();
                if (currentTime - timeAway >= timeToWait) {
                    showInactiveAlert();
                } else {
                    resetTimeout();
                }
            });

            // Eventos para restablecer el temporizador cuando el usuario interactúa con la página
            window.addEventListener("mousemove", resetTimeout);
            window.addEventListener("mousedown", resetTimeout);
            window.addEventListener("keypress", resetTimeout);
            window.addEventListener("touchmove", resetTimeout);
        }

        // Inicializar la configuración de redireccionamiento por tiempo de espera
        setupTimeout();

    </script>

