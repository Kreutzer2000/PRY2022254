        function scrollToTop(elementId) {
            var element = document.getElementById(elementId);
            var startPosition = window.pageYOffset;
            var targetPosition = element.getBoundingClientRect().top + window.pageYOffset;
            var distance = targetPosition - startPosition;
            var startTime = null;

            // Comprueba si la posición actual de la ventana está por debajo del elemento objetivo.
            if (startPosition > targetPosition) {
                function animation(currentTime) {
                    if (startTime === null) startTime = currentTime;
                    var timeElapsed = currentTime - startTime;
                    var progress = Math.min(timeElapsed / 500, 1);
                    window.scrollTo(0, startPosition + distance * progress);

                    if (progress < 1) {
                        requestAnimationFrame(animation);
                    }
                }

                requestAnimationFrame(animation);
            }
        }

