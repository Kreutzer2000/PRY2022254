
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mt-4">Usuarios</h1>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users"></i> Lista de Usuarios
    </div>
    <div class="card-body">
        @*<h5 class="card-title">Special title treatment</h5>
            <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
            <a href="#" class="btn btn-primary">Go somewhere</a>*@
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Usuario</button>
            </div>
        </div>

        <hr />

        <table id="tablaCliente" class="display cell-border" style="width: 100%;">
            <thead>
                <tr>
                    <th>Nombres y Apellidos</th>
                    <th>Cargo del Empleado</th>
                    <th>Razon Social</th>
                    <th>Ruc</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Activo</th>
                    <th>Mantenimiento</th>
                </tr>
            </thead>

            <tfoot>
                <tr>
                    <th>Nombres y Apellidos</th>
                    <th>Cargo del Empleado</th>
                    <th>Razon Social</th>
                    <th>Ruc</th>
                    <th>Email</th>
                    <th>Rol</th>
                    <th>Activo</th>
                    <th>Mantenimiento</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Usuario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <input id="txtid" type="hidden" value="0" />

                <div class="row  g-2">
                    <div class="col-sm-6">
                        <label for="formGroupExampleInput">Nombre</label>
                        <input type="text" class="form-control" id="txtnombre" placeholder="Escriba aqui su nombre" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="formGroupExampleInput">Apellidos</label>
                        <input type="text" class="form-control" id="txtapellido" placeholder="Escriba aqui su apellido" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="formGroupExampleInput">Cargo o Puesto</label>
                        <input type="text" class="form-control" id="txtcargoEmpleado" placeholder="Escriba aqui el puesto" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="formGroupExampleInput">RUC</label>
                        <input type="text" class="form-control" id="txtruc" placeholder="Escriba aqui el ruc" autocomplete="off">
                    </div>
                    <div class="col-sm-12">
                        <label for="formGroupExampleInput">Razon Social</label>
                        <input type="text" class="form-control" id="txtrazonSocial" placeholder="Escriba aqui la razon social" autocomplete="off">
                    </div>
                    <div class="col-sm-12">
                        <label for="formGroupExampleInput">Correo</label>
                        <input type="email" class="form-control" id="txtcorreo" placeholder="Escriba aqui su correo" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="formGroupExampleInput">Activo</label>
                        <select id="cboactivo" class="form-select">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                    <div class="col-sm-6">
                        <label class="formGroupExampleInput">Rol</label>
                        <select id="cboRol" class="form-select">
                        </select>
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <div class="alert alert-danger" role="alert" id="mensajeError">
                            A simple danger alert—check it out!
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>

        var tabladata;
        var filaSeleccionada;

        jQuery.ajax({
            url: '@Url.Action("ListarUsuarios", "Home")',
            type: 'GET',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                //debugger;
                var x = "hola"
                console.log(data)
                //$('#tablaCliente').DataTable({
                //    data: data,
                //    columns: [
                //        { data: 'Nombres' },
                //        { data: 'Apellidos' },
                //        { data: 'CargoEmpleado' },
                //        { data: 'RazonSocial' },
                //        { data: 'Ruc' },
                //        { data: 'Email' },
                //        { data: 'Activo' },
                //        { data: 'Rol' }
                //    ]
                //});
            },
        });

        /* ///////////////// DATOS PARA LA CARGA DEL DATA TABLE ///////////////// */
        tabladata = $('#tablaCliente').DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                "url": '@Url.Action("ListarUsuarios", "Home")',
                "type": "GET",
                "datatype": "json"
            },
            "columns": [ //data es el nombre de la propiedad del objeto que se recibe en el controlador y se envia al cliente en formato json
                {
                    "data": null, "render": function (data, type, row) {
                        return data.nombres + ' ' + data.apellidos;
                    }, "width": "80px", "className": "text-center"
                },
                { "data": "cargoEmpleado", "width": "80px", "className": "text-center" },
                { "data": "razonSocial", "width": "80px", "className": "text-center" },
                { "data": "ruc", "width": "100px", "className": "text-center" },
                { "data": "email", "width": "100px", "className": "text-center" },
                { "data": "oRolc.rol", "width": "100px", "className": "text-center" },
                {
                    "data": "activo", "render": function (valor) {
                        if (valor) {
                            return '<span class="btn btn-success btn-circle"> <i class="fas fa-user-check" ></i></span > '
                        } else {
                            return '<span class="btn btn-danger btn-circle"> <i class="fas fa-user-slash"></i></span > '
                        }
                    },
                    "width": "80px", "className": "text-center"
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' + ' ' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "50px"
                    , "className": "text-center"
                }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.12.1/i18n/es-ES.json"
            }
        });

        /* ///////////////// ABRIR MODAL ///////////////// */
        function abrirModal(json) {

            $("#txtid").val(0);
            $("#txtnombre").val("");
            $("#txtapellido").val("");
            $("#txtcargoEmpleado").val(""),
            $("#txtrazonSocial").val("");
            $("#txtruc").val("");
            $("#txtcorreo").val("");
            $("#cboactivo").val(1);

            $("#mensajeError").hide();

            if (json != null) {
                $("#txtid").val(json.idUsuario);
                $("#txtnombre").val(json.nombres);
                $("#txtapellido").val(json.apellidos);
                $("#txtcargoEmpleado").val(json.cargoEmpleado);
                $("#txtrazonSocial").val(json.razonSocial);
                $("#txtruc").val(json.ruc);
                $("#txtcorreo").val(json.email);
                $("#cboactivo").val(json.activo == true ? 1 : 0);
                $("#cboRol").val(json.oRolc.idRol);
            }
            $("#FormModal").modal("show");
        }

        /* ///////////////// LISTA DE ROLES ///////////////// */
        $("<option>").attr({ "value": "0", "disabled": "true", "selected": "true" }).text("Seleccionar").appendTo("#cboRol");

        jQuery.ajax({
            url: '@Url.Action("ListarRoles", "Home")',
            type: 'GET',
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {

                $.each(data.data, function (index, valor) {
                    $("<option>").attr({ "value": valor.idRol }).text(valor.rol).appendTo("#cboRol");
                })

            },
            error: function (error) {
                console.log(error)
            }
        })


        /* ///////////////// BOTON PARA EDITAR ///////////////// */
        $("#tablaCliente tbody").on("click", '.btn-editar', function () {

            filaSeleccionada = $(this).closest("tr");
            var data = tabladata.row(filaSeleccionada).data();
            //console.log(data)
            abrirModal(data)
        })

        /* ///////////////// FUNCION PARA GUARDAR Y EDITAR JQUERY ///////////////// */
        function Guardar() {
            debugger;
            var usuario = {
                idUsuario: $("#txtid").val(),
                nombres: $("#txtnombre").val(),
                apellidos: $("#txtapellido").val(),
                cargoEmpleado: $("#txtcargoEmpleado").val(),
                razonSocial: $("#txtrazonSocial").val(),
                ruc: $("#txtruc").val(),
                email: $("#txtcorreo").val(),
                activo: $("#cboactivo").val() == 1 ? true : false,
                /*idRol: $("#cboRol").val()*/
                oRolc: {
                    idRol: $("#cboRol option:selected").val(),
                    rol: $("#cboRol option:selected").text()
                }
            }

            jQuery.ajax({
                url: '@Url.Action("GuardarUsuarios", "Home")',
                type: 'POST',
                data: JSON.stringify({ objeto: usuario }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    $(".modal-body").LoadingOverlay("hide");

                    /*Usuario nuevo*/
                    if (usuario.idUsuario == 0) {

                        if (data.resultado != 0) {
                            usuario.idUsuario = data.resultado;
                            tabladata.row.add(usuario).draw(false);

                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }

                    }
                     /*Usuario editar*/
                    else {
                        if (data.resultado) {
                            tabladata.row(filaSeleccionada).data(usuario).draw(false);
                            filaSeleccionada = null;
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }

                    }

                },
                error: function (error) {

                    $(".modal-body").LoadingOverlay("hide");
                    $("#mensajeError").text("Error Ajax");
                    $("#mensajeError").show();
                    console.log(error)
                },
                beforeSend: function () {
                    $(".modal-body").LoadingOverlay("show", {
                        imagenResizeFactor: 2,
                        text: "Cargando...",
                        size: 20
                    })
                }
            })
        }


        /* ///////////////// BOTON PARA ELIMINAR ///////////////// */
        $("#tablaCliente tbody").on("click", '.btn-eliminar', function () {

            var usuarioSeleccionado = $(this).closest("tr");
            var data = tabladata.row(usuarioSeleccionado).data();
            //console.log(data);
            swal({
                title: "¿Estas seguro?",
                text: "¿Desea eliminar al usuario?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Si",
                cancelButtonText: "No",
                closeOnConfirm: true
            },
            function () {

                jQuery.ajax({
                    url: '@Url.Action("EliminarUsuario", "Home")',
                    type: 'POST',
                    data: JSON.stringify({ id: data.idUsuario }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (data) {

                        if (data.resultado) {
                            tabladata.row(usuarioSeleccionado).remove().draw();
                        } else {
                            swal("No se pudo eliminar", data.mensaje, "Error");
                        }

                    },
                    error: function (error) {
                        console.log(error)
                    }
                });

            });
        })


    </script>
} 